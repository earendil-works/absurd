{
  "name": "absurd/absurd",
  "description": "PHP SDK for Absurd - A Postgres-native durable execution workflow system",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Absurd Contributors"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-json": "*",
    "ext-pdo": "*",
    "symfony/dotenv": "^7.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "Absurd\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Absurd\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
